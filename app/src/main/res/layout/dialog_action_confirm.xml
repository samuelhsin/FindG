<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="0.17">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/lblDialogTitle"/>
    </FrameLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="172dp" android:layout_weight="0.25">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/lblMessage"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginTop="75dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:id="@+id/btnConfirm" android:layout_gravity="center_horizontal|bottom"
                android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:id="@+id/btnCancel" android:layout_gravity="right|bottom"
                android:layout_alignTop="@+id/btnConfirm" android:layout_alignParentEnd="true"
                android:layout_marginEnd="69dp"/>
    </RelativeLayout>
</LinearLayout>